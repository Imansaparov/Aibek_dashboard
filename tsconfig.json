{
  "compilerOptions": {
    "strict": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",  // Add this
    "paths": {       // Add this section
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "types"]
}